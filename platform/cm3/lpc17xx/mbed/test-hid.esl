/*
 * Custom HID demo USB device
 *
 * main routine for MBED platform
 */

// Board specific stuff
import sys;
import trace;
import debug;
package debug
{
    const db_usbdev = 0x0009030F;
}

// Cortex M3 stuff
import fault;
import systick;
import nvic;

// LPC1768 stuff
import sysctl;
//import exti;

import usbdev;
import usb_ledbut;

var button1, button2: boolean: in, out;

/*
