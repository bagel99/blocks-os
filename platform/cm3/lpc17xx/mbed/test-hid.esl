{
    button1 = true;
    exti.ClearIntr(sys.BUT1);
}

proc EINT10_15_IRQ()
{
    if exti.Pending(sys.BUT2) then
    {   button2 = true;
        exti.ClearIntr(sys.BUT2);
    }
}
*/

proc main()
{
    sysctl.Init();
    sys.Init();
    debug.Init();
    usbdev.HIDInit();
    loop
    {   if button1 then
    	{   button1 = false;
    	    usbdev.Button(1);
    	}
    	if button2 then
    	{   button2 = false;
    	    usbdev.Button(2);
    	}
    }
}
